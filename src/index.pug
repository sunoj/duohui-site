    meta(name='description', content='使用多会生成品牌专属活动小程序，轻松管理活动报名，服务售票，现场签到。')

    meta(property="og:type" content="website")
    meta(property="og:title" content="多会")
    meta(property="og:image" content="https://www.duohui.cn/img/thumbnail.png")
    meta(property="og:url" content="https://www.duohui.cn/")

    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:title" content="多会")
