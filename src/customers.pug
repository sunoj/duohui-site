            .column.col-md-6.col-12
              img(src='./static/img/partners/clients-6.png', srcset='./static/img/partners/clients-6@2x.png 2x', alt='多会客户列表')
            .column.col-md-6.col-12
              img(src='./static/img/partners/clients-7.png', srcset='./static/img/partners/clients-7@2x.png 2x', alt='多会客户列表')
            .column.col-md-6.col-12
              img(src='./static/img/partners/clients-8.png', srcset='./static/img/partners/clients-8@2x.png 2x', alt='多会客户列表')

    .section.events
      .container
        h1.chtitle 大型会议
        -
          var events = [
            {"poster": "nicc.png", "title": "NICC 中国新三板投资者大会", "date": "09月17日", "location": "上海"},
            {"poster": "gnome.png", "title": "GNOME Asia 2017 亚洲峰会", "date": "10月14日", "location": "重庆"},
            {"poster": "rubyconf.png", "title": "RubyConf China 2017", "date": "09月16日", "location": "杭州"},
          ]
        .columns
          each event in events
            .column.col-md-4.col-12
              .shadow.event
                a(href='#')
                  img.event-poster(src='./static/img/events/'+event.poster, alt=event.title)
                  .content
                    h4=event.title
                    ul.meta.clear
                      li
                        img.icon(src='./static/img/icon/time.png')
                        span=event.date
                      li
                        img.icon(src='./static/img/icon/position.png')
                        span=event.location
    
    .section.customers.product-cases.white-bg: .container
      h1.chtitle 聚会沙龙
      -
        var cases = [
          {'img': 'eico.png', 'event': 'EICO Talk', 'logo': 'eico', 'tags': [{'name': '设计', 'style': 'design'}, {'name': '分享会', 'style': 'solid'}]},
          {'img': 'anyway.png', 'event': 'Anyway Meetup', 'logo': 'anyway', 'tags': [{'name': '设计', 'style': 'design'}, {'name': '粉丝聚会', 'style': 'lined'}]},
          {'img': 'shopbop.png', 'event': '#瘦身大作战', 'logo': 'shopbop', 'tags': [{'name': '品牌活动', 'style': 'lined'}, {'name': '运动健身', 'style': 'sport'}]}
        ]
      .columns
        each usecase in cases
          .column.col-md-4.col-12: .case
            .bg
              img(src="./static/img/cases/" + usecase.img)
            h5.event= usecase.event
            .foot
              .brand
                img(src="./static/img/cases/logos/" + usecase.logo + ".png" srcset="./static/img/cases/logos/" + usecase.logo + "@2x.png 2x")
              .tags
                each tag in usecase.tags
                  span.tag(class=tag.style)= tag.name

