    script(src='./vendor/vendor.js')
    script.
      $('body')
        .on('click', '.case-list .main-prev, .case-list .main-next', function() {
          const $this = $(this)
          const isPrev = $this.hasClass('main-prev')
          const currentIndex = $this.parents('.list-item').index()
          const items = $this.parents('.case-list').find('.list-item')
          const count = items.length
          let showIndex = currentIndex + (isPrev ? -1 : 1)
          if (showIndex > count - 1) showIndex = 0
          if (showIndex < 0 ) showIndex = count - 1
          items.removeClass('active')
          $(items[showIndex]).addClass('active')
        })
        .on('click', '.vertical-tabs .tab', function() {
          const $this = $(this)
          const index = $this.index()
          $this.addClass('active').siblings().removeClass('active')
          $('.vertical-tab-img').eq(index).addClass('active').siblings().removeClass('active')
        })