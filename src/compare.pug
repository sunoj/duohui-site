    script.
      $(document).ready(function() {
        $('.js-toggle').minitoggle();
        $('.js-toggle').on("toggle", function(e){
          selectFunction();
        });
        calcPrice();
        $('.quota .calc select').on('change', function(){
          calcPrice();
        });
      });
      Array.prototype.unique = function(){
        var res = [];
        var json = {};
        for(var i = 0; i < this.length; i++){
          if(!json[this[i]]){
            res.push(this[i]);
            json[this[i]] = 1;
          }
        }
        return res;
      }
      var formatTemplate = function(data, tmpl) {  
        var format = {  
            name: function(x) {  
              return x ; 
            }  
        };  
        return tmpl.replace(/{(\w+)}/g, function(m1, m2) {  
            if (!m2)  
              return "";  
            return (format && format[m2]) ? format[m2](data[m2]) : data[m2];  
        });
      }
      function selectFunction() {
        var selected = [];
        $(".function .checkers .minitoggle.active").each(function() {
          var data = $(this).parent('.js-toggle').data('cantuse').split(',');
          if (data[0] != '') {
            selected = selected.concat(data);
          }
        });
        selected = selected.unique();
        $(".function .answer .products .product").removeClass('unable');
        for (var i=0;i<selected.length;i++) {
          $(".function .answer .products .product."+selected[i]).addClass('unable');
        };
      }
      function calcPrice(){
        var input = {
          time : $('.quota .calc select[name=calc_time]').val(),
          people : $('.quota .calc select[name=calc_people]').val(),
          price : $('.quota .calc select[name=calc_price]').val(),
          isfree: ($('.quota .calc select[name=calc_price]').val() > 0 ? 1: 0)
        }
        var feeRates = {
          'std':{
            expression :{
              poundage: '{people}x{time}x{isfree}+{people}x{time}x{price}x1%',
              fee_per_month: '299/12',
              sms: '({time}*{people}-100)*0.1'
            },
            result:{
              poundage: '{people}*{time}*{isfree}+{people}*{time}*{price}*0.01',
              fee_per_month: '299/12',
              sms: '({time}*{people}-100)*0.1'
            }
          },
          'premier':{
            expression :{
              poundage: '{people}x{time}x{price}x1%',
              fee_per_month: '1799/12',
              sms: '({time}*{people}-500)*0.1'
            },
            result:{
              poundage: '{people}*{time}*{price}*0.01',
              fee_per_month: '1799/12',
              sms: '({time}*{people}-500)*0.1'
            }
          },
          'enterprise':{
            expression :{
              poundage: '{people}x{time}x{price}x0.6%',
              fee_per_month: '9999/12',
              sms: '({time}*{people}-1000)*0.1'
            },
            result:{
              poundage: '{people}*{time}*{price}*0.006',
              fee_per_month: '9999/12',
              sms: '({time}*{people}-1000)*0.1'
            }
          },
          'other':{
            expression:{
              poundage: '{people}x{time}x{isfree}+{people}x{time}x{price}x2.5%',
              fee_per_month: '0',
              sms: '{time}x{people}x0.1'
            },
            result:{
              poundage: '{people}*{time}*{isfree}+{people}*{time}*{price}*0.025',
              fee_per_month: '0',
              sms: '{time}*{people}*0.1'
            }
          }
        };
        var min_data = {type: null,total: 9999999}; //最小方案
        $.each(feeRates, function(service,item){
          // 循环：公式，表达式
          $.each(item, function(type,collect){
            var total = 0;
            for(exp in collect){
              // 单价表达式
              collect[exp] = formatTemplate(input, collect[exp]);
              // 计算单价，>0
              if(type=='result'){
                eval(collect[exp]) <= 0 ? collect[exp] = 0 : collect[exp] = eval(collect[exp]);
                total = total + collect[exp];
              }
            };
            if(type=='result'){
              // 计算金额总数
              collect['total'] = total;
              // 比较大小，记录最小方案
              if(total < min_data.total){
                min_data.total = total;
                min_data.type = service;
              }
            }
            console.log('collect', service, collect)
          });
        });

        if (min_data.type == "other") {
          min_data.type = 'std'
          $('#js-compare-save').hide()
        } else {
          $('#js-compare-save').show()
        }

        // dom产品
        $(".quota .answer .products .product").css('display','none');
        $(".quota .answer .products ."+min_data.type).css('display','inline-block');
        // dom节省价格
        var cacl_save = feeRates.other.result.total - min_data.total;
        $(".clac_save").text(cacl_save.toFixed(0));
        // dom自家方案最低价
        $(".quota .byus .line[data-item]").each(function(){
          var data_item = $(this).data('item');
          $(this).find('.exp').text(feeRates[min_data.type]['expression'][data_item]+"=");
          $(this).find('.result').text("￥"+feeRates[min_data.type]['result'][data_item].toFixed(0) );
        });
        // dom活动行方案
        $(".quota .byother .line[data-item]").each(function(){
          var data_item = $(this).data('item');
          $(this).find('.exp').text(feeRates['other']['expression'][data_item]+"=");
          $(this).find('.result').text("￥"+feeRates['other']['result'][data_item].toFixed(0));
        });

        $('body')
          .on('click', '.comparison-table-tabs .tab', function() {
            const $tab = $(this)
            const plan = $tab.data('plan')
            $tab.addClass('active').siblings().removeClass('active')
            $('.comparison-table').attr('data-show', plan)
          })
          .on('click', '.comparison-table .secondary-header', function() {
            $(this).toggleClass('close').find('~ tr').toggle()
          })
          .on('click', '.content-switch .switchers .switcher', function() {
            $switch = $(this)
            const index = $switch.index()
            $switch
              .addClass('active')
              .siblings().removeClass('active')
            $switch
              .parents('.content-switch')
              .find('.content').eq(index)
              .addClass('active')
              .siblings().removeClass('active')
          })
          .on('click', '.show_calc_detail', () => {
            $('.calc_detail_modal').show()
          })
          .on('click', '.hide_calc_detail', () => {
            $('.calc_detail_modal').hide()
          })
